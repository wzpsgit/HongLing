<Window x:Class="HongLingProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HongLingProject"
        mc:Ignorable="d"
        Title="红岭创投" Height="600" Width="1000">
    <Grid>
        <Label Content="利率：" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InterestRate_Text" HorizontalAlignment="Left"  BorderThickness="0,0,0,1" Height="23" Margin="70,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="还款方式：" HorizontalAlignment="Left" Margin="225,25,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Repayment_ComboBox" HorizontalAlignment="Left" Margin="295,25,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="借款时间：" HorizontalAlignment="Left" Margin="435,25,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="Hour_Text" HorizontalAlignment="Left" BorderThickness="0,0,0,1"  Height="23" Margin="500,25,0,0" VerticalAlignment="Top" Width="40"/>
        <Label Content="时" HorizontalAlignment="Left" Margin="540,25,0,0" VerticalAlignment="Top" Width="20"/>
        <TextBox x:Name="Minute_Text" HorizontalAlignment="Left" Height="23" BorderThickness="0,0,0,1"  Margin="560,25,0,0" VerticalAlignment="Top" Width="40"/>
        <Label Content="分" HorizontalAlignment="Left" Margin="600,25,0,0" VerticalAlignment="Top" Width="30"/>
        <TextBox x:Name="Second_Text" HorizontalAlignment="Left" Height="23" BorderThickness="0,0,0,1"  Margin="620,25,0,0" VerticalAlignment="Top" Width="40"/>
        <Label Content="秒" HorizontalAlignment="Left" Margin="660,25,0,0" VerticalAlignment="Top" Width="30"/>
    </Grid>
</Window>
